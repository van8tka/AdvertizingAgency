@model AdvertizingAgency1.Models.RegisterUserViewModel

@{
    Layout = null;
      @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация пользователя в системе</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
   
    <div class="contentformEdit">

        <div class="formEditOrCreate">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Регистрация пользователя в системе</legend>


                    @Html.HiddenFor(model => model.Kod)

                    <div class="editor-label">
                        @Html.Label("Логин")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Login)
                        @Html.ValidationMessageFor(model => model.Login)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Пароль")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Подтвердите пароль")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ConfirmPassword)
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                    <div class="editor-label">
                        @Html.Label("Выберите роль сотрудника")
                    </div>
                    <div class="editor-field">

                        @Html.DropDownListFor(model => model.SelectedRoles, new SelectList(Model.SpisokRoles, "Text", "Text"), "Выберите роль")
                        @Html.ValidationMessageFor(model => model.SelectedRoles)
                    </div>

                    <p>
                        <input type="submit" value="Зарегистрировать" />
                    </p>
                </fieldset>
            }

            <div>
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
    </div>
</body>
</html>
