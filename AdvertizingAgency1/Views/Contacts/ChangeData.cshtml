
@model AdvertizingAgency1.Models.ContactsCompanyViewModel
@{
    Layout = null;
      @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
}
<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
<title>Изменить реквизиты</title>
<div class="contentformEdit">
    <h2>Изменить реквизиты компании</h2>
    <div class="formEditOrCreate">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Реквизиты компании</legend>

                <div class="editor-label">
                    @Html.Label("Email компании")

                </div>
           
                <div class="editor-field">
                    @Html.EditorFor(model=>model.Email)
                    @Html.ValidationMessageFor(model=>model.Email)
                </div>
                <div class="editor-label">
                    @Html.Label("Пароль на вход в email")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Pasw)
                    @Html.ValidationMessageFor(model => model.Pasw)
                </div>


                <div class="editor-label">
                    @Html.Label("Расчётный счёт")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model=>model.Rsc)
                    @Html.ValidationMessageFor(model=>model.Rsc)
                </div>

                <p>
                    <input type="submit" value="Сохранить изменения" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Назад", "Index")
        </div>
    </div>
</div>
