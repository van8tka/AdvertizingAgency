@using DAL;
@using AdvertizingAgency1.Models
@model CreateAdresViewModel
@{
    Layout = null;
      @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
     <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
}
<title>Новый адрес</title>
<div class="contentformEdit">
    <h2>Добавление нового адреса размещения билборда:</h2>
    <div class="formEditOrCreate">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
    <fieldset class="fieldsetform">
        <legend>Адреса</legend>
        <div class="editor-label">
            @Html.Label("Адрес")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdresName)
            @Html.ValidationMessageFor(model => model.AdresName)
        </div>
        <div class="editor-label">
            @Html.Label("Цена размещения на 1 месяц")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.AdresCost)
            @Html.ValidationMessageFor(model => model.AdresCost)
        </div>
        <p>
            <input type="submit" value="Добавить адрес" />
        </p>
    </fieldset>
        }
        <div>
            @Html.ActionLink("Назад", "Index")
        </div>
    </div>
</div>
