@model int
@{
    Layout = null;
      @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
}
<title>Адрес добавлен</title>
<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="contentformEdit">

    <div class="formEditOrCreate">

        <h2>Адрес №@Model добавлен в базу данных(изменён). Хотите установить метку на карте?</h2>
        @Html.ActionLink("Установить метку на карте", "AdresMap",new {id=Model})
        @Html.ActionLink("Не устанавливать метку на карте", "Index")
    </div>
</div>
