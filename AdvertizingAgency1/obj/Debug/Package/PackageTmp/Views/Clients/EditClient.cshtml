@using DAL;
@using AdvertizingAgency1.Models
@model CreateClientForDogovorViewModel
@{
    Layout = null;
      @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
}
<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
<title>"Изменение клиента"</title>
<div class="contentformEdit">

    <h2>Изменить данные клиента:</h2>

    <div class="formEditOrCreate">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Клиент</legend>

                @Html.HiddenFor(model => model.clientId)
             
             <div class="editor-label">
                    @Html.Label("Наименование")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.clientName)
                    @Html.ValidationMessageFor(model => model.clientName)
                </div>

                <div class="editor-label">
                    @Html.Label("УНП")
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.clientUNP)
                    @Html.ValidationMessageFor(model => model.clientUNP)
                </div>
                <div class="editor-label">
                    @Html.Label("ФИО контактного лица")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.clientFio)
                    @Html.ValidationMessageFor(model => model.clientFio)
                </div>
                <div class="editor-label">
                    @Html.Label("Номер телефона")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.clientPhone)
                    @Html.ValidationMessageFor(model => model.clientPhone)
                </div>
                <div class="editor-label">
                    @Html.Label("Email")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.clientEmail)
                    @Html.ValidationMessageFor(model => model.clientEmail)
                </div>
                <div class="editor-label">
                    @Html.Label("Skype")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.clientSkype)
                    @Html.ValidationMessageFor(model => model.clientSkype)
                </div>
                <div class="editor-label">
                    @Html.Label("Адрес")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.clientAdres)
                    @Html.ValidationMessageFor(model => model.clientAdres)
                </div>

                <div class="editor-label">
                    @Html.Label("Пожелания")
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.clientPogelanie)
                    @Html.ValidationMessageFor(model => model.clientPogelanie)
                </div>

                <p>
                    <input type="submit" value="Сохранить изменения" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Назад", "Index")
        </div>
    </div>
</div>


