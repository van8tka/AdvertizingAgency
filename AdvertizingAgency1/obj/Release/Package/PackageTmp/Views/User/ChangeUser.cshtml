@model AdvertizingAgency1.Models.CreateUserViewModel

@{
    Layout = null;
      @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Изменение данных сотрудника</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

    <div class="contentformEdit">

        <div class="formEditOrCreate">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Изменить данные сотрудника</legend>


                    @Html.HiddenFor(model => model.Kod)

                    <div class="editor-label">
                        @Html.Label("ФИО сотрудника")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Fio)
                        @Html.ValidationMessageFor(model => model.Fio)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Должность")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Dolgnost)
                        @Html.ValidationMessageFor(model => model.Dolgnost)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Адрес")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Adres)
                        @Html.ValidationMessageFor(model => model.Adres)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Телефон")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Email")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <p>
                        <input type="submit" value="Продолжить" />
                    </p>
                </fieldset>

            }

            <div>
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
     </div>
</body>
</html>
