@using DAL
@using AdvertizingAgency1.Models
@model EditAdresViewModel
@{
    Layout = null;
      @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
}
<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
<title>Изменить адрес</title>
<div class="contentformEdit">
<h2>Изменить адрес размещения билборда:</h2>
<div class="formEditOrCreate">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Адрес</legend>

            <div class="editor-field">
                @Html.HiddenFor(model => model.IDadres)
            </div>

            <div class="editor-label">
                @Html.Label("Адрес")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NameAdres)
                @Html.ValidationMessageFor(model => model.NameAdres)
            </div>

            <div class="editor-label">
                @Html.Label("Цена месячной аренды")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.AdresCost)
                @Html.ValidationMessageFor(model => model.AdresCost)
            </div>

            <p>
                <input type="submit" value="Сохранить изменения" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Назад", "Index")
    </div>
</div>
</div>
